{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@img/*": ["src/assest/img"],
      "@style/*": ["src/assest/style"],
      "@pages/*": ["src/pages"]
    },
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "types": ["node"],
    "module": "commonjs",
    "jsx": "react",
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack"
  ],
  "types": [
    "babylonjs",
    "babylonjs-loaders",
    "anotherAwesomeDependency"
  ],
}
